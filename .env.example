# Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Connection String
# For local MongoDB: mongodb://localhost:27017/calorietracker
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/calorietracker
MONGODB_URI=mongodb://localhost:27017/calorietracker

# Server Port
PORT=3000

# Optional: JWT Secret for user authentication (future feature)
# JWT_SECRET=your-super-secret-key-here

# Optional: API Keys for external food databases (future feature)
# USDA_API_KEY=your-usda-api-key
# EDAMAM_API_KEY=your-edamam-api-key
